<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_title_dialog"
    >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Chọn loại sản phẩm "
    android:layout_gravity="center"
    android:textSize="30dp"
    android:textStyle="bold"
    android:textColor="@color/black"
    />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/lis_loaiSP"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_themLoai"
        android:hint="Nhập tên loại sản phẩm"

        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/none_backgroud"
        android:src="@android:drawable/ic_menu_add"
        android:id="@+id/ibtn_addLoai"
        android:layout_gravity="center"/>
</LinearLayout>