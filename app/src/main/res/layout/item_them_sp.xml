<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/logo"
        android:layout_margin="20dp"
        android:scaleType="fitXY"/>

    <EditText
        android:id="@+id/txtIdSanPhamThem"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/khung_input_login"
        android:hint="Id sản phẩm"/>
    <EditText
        android:id="@+id/txtTenSanPhamThem"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/khung_input_login"
        android:hint="Tên sản phẩm"/>
    <EditText
        android:id="@+id/txtSoLuongThem"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/khung_input_login"
        android:hint="Số lượng"/>
    <EditText
        android:id="@+id/txtNgayLuuKhoThem"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/khung_input_login"
        android:hint="Ngày lưu kho"/>
    <EditText
        android:id="@+id/txtGiaThem"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/khung_input_login"
        android:hint="Giá"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnCancelThem"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_margin="20dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:background="@drawable/button_login"/>
        <Button
            android:id="@+id/btnSaveThem"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_margin="20dp"
            android:text="Save"
            android:textColor="@color/white"
            android:background="@drawable/button_login"/>
    </LinearLayout>


</LinearLayout>